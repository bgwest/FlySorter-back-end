{
  "config": {
    "target": "http://localhost:3000",
    "phases": [
      {
        "duration": 10,
        "arrivalRate": 50
      },
      {
        "duration": 30,
        "arrivalRate": 200
      }
    ],
    "processor" : "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name": "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {
          "post": {
            "url": "/user/signup",
            "json": {
              "username": "{{ username }}",
              "email": "{{ email }}",
              "password": "{{ password }}",
              "accesscode": "{{ accesscode }}"
            },
            "capture": {
              "json": "$.token",
              "as": "token"
            }
          }
        }
      ,{
          "get": {
            "url": "/user/auth/login",
            "headers": {
              "Authorization": "Bearer {{ token }}"
            }
          }
        }
      ]
    }
  ]
}